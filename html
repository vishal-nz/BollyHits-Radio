<script>
let elapsed = 0;
let duration = 0;

function formatTime(sec) {
  const m = Math.floor(sec / 60);
  const s = Math.floor(sec % 60);
  return `${m.toString().padStart(2,'0')}:${s.toString().padStart(2,'0')}`;
}

function enlargeImage(src) {
  const modal = document.getElementById("imgModal");
  const modalImg = document.getElementById("modalImg");
  modalImg.src = src;
  modal.style.display = "flex";
}

document.getElementById("imgModal").addEventListener("click", () => {
  document.getElementById("imgModal").style.display = "none";
});

async function loadNowPlaying() {
  const url = "https://corsproxy.io/?https://az13.yesstreaming.net/api/nowplaying/163";

  const res = await fetch(url);
  const data = await res.json();

  const track = data.now_playing.song;

  elapsed = data.now_playing.elapsed || 0;
  duration = data.now_playing.duration || 0;

  document.getElementById("song").textContent = track.title;
  document.getElementById("artist").textContent = track.artist;
  document.getElementById("album").textContent = track.album ? "Album: " + track.album : "";
  document.getElementById("listeners").textContent = "Listeners: " + data.listeners.current;
  document.getElementById("art").src = track.art;
  document.getElementById("art").onclick = () => enlargeImage(track.art);

  if (data.playing_next && data.playing_next.song) {
    const next = data.playing_next.song;
    document.getElementById("nextSong").textContent = next.title;
    document.getElementById("nextArtist").textContent = next.artist;
    document.getElementById("nextAlbum").textContent = next.album ? "Album: " + next.album : "";
    document.getElementById("nextArt").src = next.art;
    document.getElementById("nextArt").onclick = () => enlargeImage(next.art);
  }

  const historyList = document.getElementById("historyList");
  historyList.innerHTML = "";

  data.song_history.forEach(item => {
    const h = item.song;
    const playedAt = new Date(item.played_at * 1000).toLocaleTimeString();

    historyList.innerHTML += `
      <div class="history-item">
        <img class="history-art" src="${h.art}" onclick="enlargeImage('${h.art}')">
        <div class="history-info">
          <div class="history-title-text">${h.title}</div>
          <div class="history-artist">${h.artist}</div>
          <div class="history-album">Album: ${h.album || "Unknown"}</div>
          <div class="history-time">Played at: ${playedAt}</div>
        </div>
      </div>
    `;
  });
}

function updateProgress() {
  if (duration > 0) {
    const percent = (elapsed / duration) * 100;
    document.getElementById("progressBar").style.width = percent + "%";
    document.getElementById("counter").textContent =
      `${formatTime(elapsed)} / ${formatTime(duration)}`;
  }
  elapsed++;
}

document.getElementById("playBtn").addEventListener("click", () => {
  const player = document.getElementById("player");
  if (player.paused) {
    player.play();
    playBtn.textContent = "Pause";
  } else {
    player.pause();
    playBtn.textContent = "Play";
  }
});

loadNowPlaying();
setInterval(loadNowPlaying, 15000);
setInterval(updateProgress, 1000);
</script>

